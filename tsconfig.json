{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "bld",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  }
}
